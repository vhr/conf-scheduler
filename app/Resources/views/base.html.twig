                            </ul>
                        </div>
                    {% else %}
                        <a class="mdl-navigation__link" href="{{ path('fos_user_security_login') }}">{{ 'Login'|trans }}</a>
                        <a class="mdl-navigation__link" href="{{ path('fos_user_registration_register') }}">{{ 'Sign in'|trans }}</a>
                    {% endif %}
                </nav>
            </div>
        </header>
