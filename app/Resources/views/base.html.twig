                            </ul>#}
                        </div>
                        <div class="mdl-navigation__link">
                            <button id="user-profile-menu" class="mdl-button mdl-js-button mdl-button--icon">
                                {% if app.user.gravatar %}
                                    <img src="{{ app.user.gravatar }}">
                                    {#<i class="material-icons">arrow_drop_down</i>#}
                                {% else %}
                                    <i class="material-icons">person</i>
                                {% endif %}
                            </button>
                            <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                                for="user-profile-menu">
                                <li class="mdl-menu__item">My conferences</li>
                                <li class="mdl-menu__item mdl-menu__item--full-bleed-divider">My schedule</li>
{#                                <li disabled class="mdl-menu__item">Disabled Action</li>#}
