{% extends 'base.html.twig' %}

{% set nav = 'conference' %}

{% block body %}

    <div class="mdl-tabs mdl-js-tabs ">
        {% include 'ConferenceSchedulerBundle:Conference:tabs.html.twig' with {'conference': conference, 'active': 'lecturers'} %}

        <div class="mdl-tabs__panel is-active">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--6-col">
                    <h3 class="mdl-layout-title">{{ 'Invited lecturers'|trans }}</h3>
                    <div class="mdl-list">
                        {% for lecturer in lecturers %}
                            {% set user = lecturer.user %}
                            <div class="mdl-list__item mdl-list__item--three-line">
                                <span class="mdl-list__item-primary-content">
                                    {% if user.gravatar %}
                                        <img src="{{ user.gravatar(40) }}" class="mdl-list__item-avatar" alt="{{ user.names|e }}">
                                    {% else %}
                                        <i class="material-icons mdl-list__item-avatar">person</i>
                                    {% endif %}
                                    <span>{{ user.names }}</span>
                                    <span class="mdl-list__item-text-body">
                                        {{ lecturer.statusName }}
                                    </span>
                                </span>
                                <a class="mdl-list__item-secondary-action" href="{{ path('conference_lecturer_remove', { 'conference_id': conference.id, 'id': user.id }) }}">
                                    <i class="material-icons">clear</i>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {#<div class="mdl-cell mdl-cell--6-col">
                    <div class="mdl-list">
                        {% for user in users %}
                            <div class="mdl-list__item">
                                <span class="mdl-list__item-primary-content">
                                    <i class="material-icons mdl-list__item-avatar">person</i>
                                    <span>{{ user.username }}</span>
                                </span>
                                <a class="mdl-list__item-secondary-action" href="{{ path('conference_lecturer_add', { 'conference_id': conference.id, 'id': user.id }) }}">
                                    <i class="material-icons">add</i>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>#}
            </div>
        </div>
    </div>
{% endblock %}
