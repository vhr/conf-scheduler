{% extends 'base.html.twig' %}

{% block layout_title %}
    {{ 'Add administrators to conference'|trans }}
{% endblock %}

{% block header %}
    {% include 'ConferenceSchedulerBundle:Conference:tabs.html.twig' with {'conference': conference, 'active': 'admins'} %}
{% endblock %}

{% block body %}
    <section class="mdl-layout__tab-panel is-active">
        <div class="mdl-list">
            <div class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                    <span>
                        <h6>{{ 'Users'|trans }}</h6>
                    </span>
                </span>
            </div>
            {% for user in pagination %}
                <div class="mdl-list__item mdl-list__item--three-line">
                    <span class="mdl-list__item-primary-content">
                        {% if user.gravatar %}
                            <img src="{{ user.gravatar(40) }}" class="mdl-list__item-avatar" alt="{{ user.names|e }}">
                        {% else %}
                            <i class="material-icons mdl-list__item-avatar">person</i>
                        {% endif %}
                        <span>{{ user.names }}</span>
                        <span class="mdl-list__item-text-body">
                            {{ user.email }}
                        </span>
                    </span>
                    <span class="mdl-list__item-secondary-content">
                        <a id="user-add-{{ user.id }}" class="mdl-list__item-secondary-action" href="{{ path('conference_admin_add', { 'conference_id': conference.id, 'id': user.id }) }}" class="mdl-button mdl-js-button">
                            <i class="material-icons">add</i>
                        </a>
                        <div class="mdl-tooltip" data-mdl-for="user-add-{{ user.id }}">
                            {{ 'Add user to conference administrators'|trans }}
                        </div>
                    </span>
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </section>
{% endblock %}
