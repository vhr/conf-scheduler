{% extends 'base.html.twig' %}

{% block layout_title %}
    {{ 'Create event in program'|trans }}
{% endblock %}

{% block header %}
    {% include 'ConferenceSchedulerBundle:Conference:tabs.html.twig' with {'conference': conference, 'active': 'program'} %}
{% endblock %}

{% block body %}
    <section class="mdl-layout__tab-panel is-active">
        <h1 class="mdl-layout-title">Conference creation</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
        {{ form_end(form) }}

        <ul>
            <li>
                <a href="{{ path('conference_index') }}">Back to the list</a>
            </li>
        </ul>
    </section>
{% endblock %}
