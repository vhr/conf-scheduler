{% extends 'base.html.twig' %}

{% set nav = 'venue' %}

{% block body %}
    <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
        <div class="mdl-tabs__tab-bar">
            <a href="{{ path('venue_show', { 'id': venue.id }) }}" class="mdl-tabs__tab is-active">Review</a>
            <a href="{{ path('venue_edit', { 'id': venue.id }) }}" class="mdl-tabs__tab">Edit</a>
            <a href="{{ path('hall_index', { 'venue_id': venue.id }) }}" class="mdl-tabs__tab">Halls</a>
        </div>

        <div class="mdl-tabs__panel is-active">
            <br>
            <table class="mdl-data-table mdl-js-data-table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ venue.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ venue.name }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ venue.address }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
