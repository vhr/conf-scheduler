{% extends "::base.html.twig" %}

{% block title %}
    {{ 'Halls'|trans }}
{% endblock %}

{% block layout_title %}
    {{ 'Halls'|trans }}
{% endblock %}

{% block body %}
    <div class="mdl-grid">
        {% for hall in halls %}
            <div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
                <div class="mdl-card__media">
                    <img class="article-image" src="{{ hall.image }}" border="0" height="600" alt="{{ hall.name|e }}">
                </div>
                <div class="mdl-card__title">
                    <h2 class="mdl-card__title-text">{{ hall.name }}</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    {{ hall.description|nl2br }}
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent" href="portfolio-example01.html">Read more</a>
                </div>
                <div class="mdl-card__menu">
                    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                        <i class="material-icons">share</i>
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}